<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeverNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/tt_norms_pro_medium</item>
    </style>
    <style name="Theme.NeverNote.Background">
        <item name="android:background">@color/black</item>
    </style>
    <style name="Theme.NeverNote.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>
    <style name="Theme.NeverNote.ActionBar.PopUp" parent="ThemeOverlay.AppCompat.Dark">
    </style>
    <style name="Theme.NeverNote.actions" parent="Theme.NeverNote">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.NeverNote.Button.Search" parent="Theme.NeverNote">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hidden_text_light</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_search_bg</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="Theme.NeverNote.Text.Content" parent="Theme.NeverNote">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/tt_norms_pro_regular</item>
    </style>
    <style name="Theme.NeverNote.Text.Date" parent="Theme.NeverNote">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:background">@drawable/date_bg</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>